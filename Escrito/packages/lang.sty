% Lenguaje: Haskell
\lstdefinelanguage{Haskell}
{
  % Operadores
  otherkeywords = { :, =, |, (, ), ., ->, \{, \}, \[, \], \, },
  morekeywords  = [1]{ :, =, |, (, ), ., ->, \{, \}, \[, \], \, },
  % Constructores
  keywords      = [2]{ L, I, Const, Loc, UOp, BOp, FCall
                     , RWS, RWST, Except, InFun, InProc, Out, C, CM, CT, CB, SCE, SCW, BT
                     },
  % Funciones
  keywords      = [3]{ info, item, sLin, sCol, eLin, eCol, makeExprParser, getSourcePos, withRecovery
                     , getID, bTrace, cFunProc, cType, cBlock, errorMsg, errorBT, warningMsg, warningBT, emptyBT, push, pop, tail
                     , errorSC, warningSC, withBT, unification
                     },
  % Tipos
  keywords      = [4]{ Located, Info, Line, Column, Id, LExpr, Expr, LConstant, LLocation, BinOp, UnOp, File
                     , Check, SCError, SCWarning, SCWarnings, Scope, Context, Backtrace, CFunProc, CType, CBlock, Error, Warning, BTNode
                     },
  % Palabras Claves
  keywords      = [5]{ data, type, newtype },
  % Colores
  basicstyle    = {\ttfamily \color{Black}},
  keywordstyle  = [1]{\color{Mahogany}},
  keywordstyle  = [2]{\color{Purple}},
  keywordstyle  = [3]{\color{LimeGreen}},
  keywordstyle  = [4]{\color{Cyan}},
  keywordstyle  = [5]{\color{Magenta}},
  % Comentarios
  morecomment   = [l]{--},
  commentstyle  = {\itshape \color{OliveGreen}},
  % Otros
  captionpos    = b,
  numbers       = left,
  numberstyle   = {\tiny \color{Gray}},
}

% Lenguaje: DeltaLang
\lstdefinelanguage{Lang}
{
  % Operadores
  otherkeywords = { :, :=, =, (, ), +, -, *, /, \%, !, &&, ||, ==, !=, <, >, <=, >=, ., \#, \[, \], \, },
  morekeywords  = [1]{ :, :=, =, (, ), +, -, *, /, \%, !, &&, ||, ==, !=, <, >, <=, >=, ., \#, \[, \], \, },
  % Tipos
  keywords      = [2]{ int, real, bool, char, array, pointer, of },
  % Palabras Claves
  keywords      = [3]{ var, proc, in, out, fun, end, ret, if, then, elif, else, fi, while, for, to, downto, do, od, type, tuple, inst, where },
  % Constantes
  keywords      = [4]{ true, false, inf, null },
  % Sentencias
  keywords      = [5]{ alloc, free, skip },
  % Clases
  keywords      = [6]{ Eq, Ord },
  % Colores
  basicstyle    = {\ttfamily \color{Black}},
  keywordstyle  = [1]{\color{RoyalBlue}},
  keywordstyle  = [2]{\color{ForestGreen}},
  keywordstyle  = [3]{\color{BurntOrange}},
  keywordstyle  = [4]{\color{Maroon}},
  keywordstyle  = [5]{\color{Purple}},
  keywordstyle  = [6]{\color{WildStrawberry}},
  % Comentarios
  morecomment   = [s]{\{}{\}},
  commentstyle  = {\itshape \color{OliveGreen}},
  % Caracteres
  morestring    = [b]',
  stringstyle   = {\itshape},
  % Otros
  captionpos    = b,
  numbers       = left,
  numberstyle   = {\tiny \color{Gray}},
}

